<launch>
  <!-- v4l to ROS adapter -->
  <node name="usb_cam" pkg="usb_cam" type="usb_cam_node" output="screen" required="true">
    <param name="video_device" value="/dev/video0" />
    <param name="image_width" value="1280" />
    <param name="image_height" value="960" />
		
    <!-- mjpeg, yuyv, uyvy, yuvmono10, rgb24, grey -->
    <param name="pixel_format" value="mjpeg" />
		<param name="framerate" value="30" />
    <param name="camera_frame_id" value="usb_cam" />
    
    <!-- userptr, mmap, read | i've heard rumors userptr memcpy's are the fastest.-->
    <param name="io_method" value="userptr"/>
    
    <!-- count of buffers to be passed to xioctl-VIDIOC_REQBUFS -->
    <!-- There can be latency issues at low frame rates with higher buffer counts. -->
    <param name="buffer_count" value="1"/>
    
    <!-- ffmpeg loglevel, error, fatal, "" for default -->
    <param name="ffmpeg_log_level" value="fatal"/>
  
  </node>
  
  <!-- ROS image viewer. -->
  <node name="image_view" pkg="image_view" type="image_view" respawn="false" output="screen" required="true">
    <remap from="image" to="/usb_cam/image_raw"/>
    <param name="autosize" value="true" />
  </node>
</launch>
